extends ../index

block center_content
    - var myTopics = topics
    link(rel='stylesheet' href='/stylesheets/controls/topics.css')
    div(class='col s12 topics-list')
        if myTopics.length > 0
            each item in myTopics
                div(class='col l3 m6 s12')
                    div(class="card small topic-card")
                        div(class="card-image waves-effect waves-block waves-light")
                            img(class='activator' src=item.pictureUrl)
                            span(class="card-title") #{item.name}
                        div(class="card-content")
                            span(class="card-title activator grey-text text-darken-4")
                                i(class="material-icons right") more_vert
                            a(href="/feeds?roomId="+item.roomId style='display: block') Feeds
                        div(class="card-reveal")
                            span(class="card-title grey-text text-darken-4") #{item.name}
                                i(class="material-icons right") close
                            p #{item.description}

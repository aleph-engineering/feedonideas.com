    form(class='modal modal-fixed-footer' id='createTopic' method='post' action='/topics/create')
        div(class='modal-content')
            h5 Create new topic
            div(class="row")
                div(class='input-field')
                    i(class='material-icons small prefix') local_offer
                    input(class='validate' type='text' name='topicName' id='topicName' required='required')
                    label(for='topicName') Topic Name*
            div(class="row")
                div(class='input-field')
                    i(class='material-icons small prefix') panorama
                    input(class='validate' type='text' name='pictureUrl' id='pictureUrl')
                    label(for='pictureUrl' data-error="Please type a correct url address") Picture url
            div(class="row")
                div(class='input-field')
                    i(class='material-icons small prefix') local_offer
                    input(class='validate url' type='url' name='siteUrl' id='siteUrl')
                    label(for='siteUrl' data-error="Please type a correct url address") Site url
            div(class="row")
                div(class='input-field')
                    i(class='material-icons small prefix') description
                    textarea(class='materialize-textarea' name='topicDesc' id='topicDesc')
                    label(for='topicDesc' data-error="Please type a correct url address") Description
        div(class="modal-footer")
            button(class="modal-action waves-effect waves-light btn-flat cyan darken-4 white-text" type='submit') Done

    div(class="fixed-action-btn" style="bottom: 45px; right: 24px")
        a(class="btn-floating btn-large cyan darken-4 modal-trigger" href="#createTopic" data-target='createTopic')
            i(class="large material-icons") add
